<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_gravity="top"
        android:id="@+id/search"
        android:hint="Search expenses"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/search_edittext_design"
        android:drawableLeft="@mipmap/ic_search_black_24dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Task Name: "
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/task_name"
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"
            android:enabled="false"
            android:background="@drawable/rectangular_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Task Start Date: "
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/task_start_date"
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"
            android:enabled="false"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/rectangular_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Task End Date: "
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/task_end_date"
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"
            android:enabled="false"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/rectangular_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Task Details: "
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/task_details"
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"
            android:enabled="false"
            android:background="@drawable/rectangular_edittext"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:id="@+id/save"
        android:text="Save"
        android:textColor="@color/colorText"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <ListView
        android:layout_marginTop="260dp"
        android:id="@+id/expenses_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>